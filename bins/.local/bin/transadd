#!/bin/sh

# Mimeapp script for adding torrent to transmission-daemon, but will also start the daemon first if not running.

# transmission-daemon sometimes fails to take remote requests in its first moments, hence the sleep.

pidof transmission-daemon >/dev/null || (transmission-daemon && notify-send "Starting transmission daemon..." && sleep 3 && pkill -RTMIN+7 "${STATUSBAR:-dwmblocks}")

xclip -selection c -o | grep "magnet" && transmission-remote -a "$(xclip -selection c -o)" && notify-send "ðŸ”½ Torrent added." ; exit
transmission-remote -a "$@" && notify-send "ðŸ”½ Torrent added."
