#!/usr/bin/zsh

# add the directories to backup in the list below.
# git should already be initialized and remote set.
DIRS=(
	/home/bibek/dotfiles/
	/home/bibek/dotfiles/build/build/dwm/
)

# commit message
MSG="Routine Bump - `date`"

function backup() {
	for dir in $DIRS; do
		cd "$dir"
		git add .
		git commit -m "$MSG"
		git push --all origin
	done
}

{ backup && notify-send "ïš’ Backup Successful" } \
    || notify-send "ïš’ Backup failed ðŸ˜¢" 
